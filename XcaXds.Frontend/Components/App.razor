        require.config({
            paths: { vs: 'https://cdn.jsdelivr.net/npm/monaco-editor@0.34.0/min/vs' }
        });
        window.MonacoEnvironment = {
            getWorkerUrl: function (_moduleId, label) {

                const cdnBase = 'https://cdn.jsdelivr.net/npm/monaco-editor@0.34.0/min/vs';
                
                const blobSource = `
                self.MonacoEnvironment = { baseUrl: '${cdnBase}/' };
                importScripts('${cdnBase}/base/worker/workerMain.js');
                `;
                
                const blob = new Blob([blobSource], { type: 'application/javascript' });
                return URL.createObjectURL(blob);
            }
        };
    </script>
