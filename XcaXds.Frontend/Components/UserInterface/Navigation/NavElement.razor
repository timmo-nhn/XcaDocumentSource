@using XcaXds.Commons.Models;
@using Microsoft.AspNetCore.Components

<div class="nav-item px-3 mt-2">
    <NavLink class="nav-link" href="@link" Match="NavLinkMatch.All">
        <span class="nav-icon">
            <Icon Name="@IconName" />
        </span>
        <span class="nav-text">@Text</span>
        @if (!string.IsNullOrEmpty(Description))
        {
            <span class="nav-description">@Description</span>
        }
    </NavLink>
</div>

@code {
    [Parameter] 
    public string Text { get; set; } = "";
    
    [Parameter] 
    public string link { get; set; } = "";

    [Parameter] 
    public string Description { get; set; } = "";
    
    [Parameter]
    public IconName IconName { get; set; }
    
    // This is needed if you move the CSS to a separate file
    protected override void OnInitialized()
    {
        // Add global styles if needed
        // This is one method to ensure styles apply correctly
    }
}